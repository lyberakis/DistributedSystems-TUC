#Install NodeJS and npm
sudo apt update
sudo apt install nodejs npm
sudo apt install build-essential

workdir=`pwd`

# Install Packages for the games and build them
cd containers/Website/games/tic-tac-toe
if [ ! -d "node_modules" ] then
    npm install
fi

rm -rf node_modules && npm install
npm run build
cd ../chess
rm -rf node_modules && npm install
npm run build

# Install Packages for Playmaster
rm -rf node_modules && npm install